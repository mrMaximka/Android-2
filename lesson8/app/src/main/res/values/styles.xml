<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorGreen</item>
	</style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

	<style name="SettingsButtonStyle">
		<item name="android:gravity">end</item>
		<item name="android:layout_marginEnd">15sp</item>
		<item name="android:layout_marginTop">10sp</item>
		<item name="android:background">?android:attr/selectableItemBackground</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="AddLayoutStyle">
		<item name="android:layout_gravity">top</item>
		<item name="android:layout_marginEnd">15sp</item>
		<item name="android:layout_marginStart">15sp</item>
		<item name="android:layout_marginTop">10sp</item>
	</style>

	<style name="SecondTitleStyle">
		<item name="android:gravity">center</item>
		<item name="android:textSize">25sp</item>
		<item name="android:layout_marginTop">15sp</item>
	</style>

	<style name="MainValueStyle">
		<item name="android:gravity">center</item>
		<item name="android:textSize">25sp</item>
	</style>

	<style name="CheckBoxItemsStyle">
		<item name="android:textSize">20sp</item>
		<item name="android:gravity">start</item>
		<item name="android:layout_marginStart">25sp</item>
	</style>

	<style name="ShareButton" parent="Widget.AppCompat.Button.Borderless.Colored">
		<item name="android:textSize">15sp</item>
		<item name="android:layout_gravity">end</item>
		<item name="android:layout_marginEnd">15sp</item>
		<item name="android:src">@drawable/share_icon</item>
	</style>

	<style name="SecondFindButton" parent="Widget.AppCompat.Button.Borderless.Colored">
		<item name="android:textSize">15sp</item>
		<item name="android:textColor">@color/colorBlue</item>
		<item name="android:layout_gravity">start</item>
		<item name="android:layout_marginStart">15sp</item>
	</style>

	<style name="AddButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
		<item name="android:layout_gravity">end</item>
		<item name="android:clickable">true</item>
	</style>

	<style name="AddEditText">
		<item name="android:hint">@string/edit_text_hint</item>
		<item name="android:textSize">15sp</item>
		<item name="android:layout_gravity">center_vertical</item>
		<item name="android:layout_marginEnd">55dp</item>
	</style>

	<style name="BehaviorBarStyle">
		<item name="android:gravity">center_horizontal</item>
		<item name="android:paddingTop">3dp</item>
		<item name="android:paddingBottom">7dp</item>
		<item name="android:textSize">15sp</item>
	</style>

	<style name="CheckBoxSettingsStyle">
		<item name="android:gravity">start</item>
		<item name="android:textSize">20sp</item>
		<item name="android:layout_marginStart">15sp</item>
		<item name="android:layout_marginEnd">15sp</item>
		<item name="android:layout_marginTop">15sp</item>
	</style>

</resources>
